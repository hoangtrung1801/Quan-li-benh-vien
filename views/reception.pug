extends layout 

block content
    h2 Reception
    .row.row-cols-3.reception#list-doctors
        each doctor in doctors 
            .col.border.d-flex.flex-column.justify-content-center.align-items-center.reception-doctor
                p Doctor #{doctor.name}
                p Slot : #{doctor.patients.length} / #{doctor.slotMax} 
                if doctor.slotMax == doctor.patients.length
                    span.badge.bg-danger FULL

    //- if receptionPatients.length > 0
    button.btn.btn-primary.my-3#next-reception Next
    //- else
        button.btn.btn-primary.my-3(disabled)#next-reception Next
    div
        h2 Patients
        table.table
            thead
                tr
                    th(scope='col') Number
                    th(scope='col') Name
                    th(scope='col') Age
                    th(scope='col') Address
                    th(scope='col') Diease
            tbody#list-patients
                each patient, idx in receptionPatients
                    tr 
                        th(scope='row')= idx+1
                        td= patient.name
                        td= patient.age
                        td= patient.address
                        td= patient.disease

block script 
    script(src="/javascripts/reception.js") 